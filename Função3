fun  main () {
    print ( " Informe a taxa de imposto: " )
    var taxaImposto = readLine () !! .dobrar()
    imprimir ( " Informe o custo do produto: " )
    var custoProduto = readLine () !! .dobrar()
    println ( " O custo total Ã© de R $ { " % .2f " .format (somaImposto (taxaImposto, custoProduto))} " )
}

fun  somaImposto ( taxaImposto :  Duplo , custoProduto :  Duplo ) :  Duplo
{
    retornar custoProduto + (custoProduto * (taxaImposto /  100 ))
}
